@model GlobeChat.Models.User
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login" title="">
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-default loadable" id="btn-login" />
                </div><div class="form-group">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <p class="alert-warning alert shake animated">
                            @Html.ValidationMessageFor(m => m.Login)
                        </p>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
