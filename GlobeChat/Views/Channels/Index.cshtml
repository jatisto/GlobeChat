    <script src="~/js/GUI/GUIElement.js"></script>
    <script src="~/js/GUI/GUIChannelListElement.js"></script>
    <script src="~/js/GUI/GUIUserListElement.js"></script>
    <script src="~/js/GUI/GUIChatFeedElement.js"></script>
    <script src="~/js/GUI/GUIChatTabElement.js"></script>
    <script src="~/js/GUI/GUIButon.js"></script>
