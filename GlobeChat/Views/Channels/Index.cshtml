@model IEnumerable<GlobeChat.Models.Channel>

@{
    ViewData["Title"] = "Channels";
}

<div class="container-fluid h-100" id="main-container">
    <div class="row justify-content-center h-100">
        <div class="col-3">
            <div class="card-header">
                <div class="input-group">
                    <input type="text" placeholder="Find your channel..." name="" class="form-control search-channel">
                    <div class="input-group-prepend">
                        <span class="input-group-text search_btn"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
            <ul class="list-group channel-list"></ul>
        </div>

        <div class="col-6">
            <div class="card-header row">
                <div class="back-button-div col-2"></div>
                <div class="col-2 avatar-top"></div>
                <div class="col-8"> <h2 class="feed-top">Message History</h2> </div>
            </div>
            <div class="feed-container">

            </div>
            <ul class="nav nav-tabs chat-tabs">
                <li class="nav-item nav-link main-channel-tab">

                </li>
            </ul>

            <div class="input-group card-footer">
                <div class="input-group-append">
                    <span class="input-group-text attach_btn"><i class="fa fa-smile-o fa-3x"></i></span>
                </div>
                <textarea name="" class="form-control message" placeholder="Type your message..."></textarea>
                <div class="input-group-append">
                    <span class="input-group-text send_btn"><i class="fa fa-location-arrow fa-3x "></i></span>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card-header">
                Users in this channel
            </div>
            <div class="input-group">
                <input type="text" placeholder="Find user..." name="" class="form-control search-user">
                <div class="input-group-prepend">
                    <span class="input-group-text search_btn"><i class="fa fa-search"></i></span>
                </div>
            </div>
            <div class="user-container">
                <ul class="list-group user-list"></ul>
            </div>
            <div class="card-footer rounded">
            </div>
        </div>
    </div>
</div>

<div class="card text-center chatmodal user-settings-modal">
    <div class="card-header container-fluid">
        <h3 class="">
            <i class="fa fa-cogs fa-1x"></i>
            Chat settings
            <button class="btn btn-dark hide-overlay fa fa-1x fa-close  float-right" />
        </h3>
        <hr />
        <div class="row">
            <div class="col-12">
                <div class="row text-center" id="croppie-div">
                    <img src="" class="user-settings-current-avatar" id="current-avatar" hidden />
                </div>
                <div class="row">

                    <label class="user-settings-pick-image-button btn btn-info btn-block">
                        <i class="fa fa-image fa-1x"></i>
                        Change your Avatar
                        @Html.AntiForgeryToken()
                        <input type="file" id="imageUploader" name="imageUploader" accept="image/*" hidden>
                    </label>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-12">
                <input type="text" class="form-control" id="user-hello-message" placeholder="Introduce yourself">
            </div>
        </div>
        <br />
        <div class="row card-footer">
            <button class="user-settings-save btn btn-success btn-block">
                <i class="fa fa-save fa-1x"></i> Save Settings
            </button>
        </div>
    </div>
</div>
@section Styles
    {
    <link rel="stylesheet" href="~/css/webchatview.css" />
    <link rel="stylesheet" href="~/lib/animate.css/animate.css" />
    <link rel="stylesheet" href="~/lib//font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/croppie/croppie.css" />


}
